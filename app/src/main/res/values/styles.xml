<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextConfig">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">@dimen/txt_size_cfg_list</item>
        <item name="android:layout_width">@dimen/cfg_list_txt_with</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextConfig_large">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">@dimen/txt_size_cfg_list_layout_large</item>
        <item name="android:layout_width">@dimen/cfg_list_txt_with_layout_large</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
